<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.container {
			width: 100%;
			height: 25em;
		}
		
		.container * {
			font-size: 1.1em;
		}
		
		.pabelleft {
			background-color: #A0A0FF;
		}
		
		.panelright {
			background-color: gray;
		}
		
		.panelright>div {
			padding: 1em;
		}
	</ui:style>
	<g:DockLayoutPanel unit="EM" styleName="{style.container}">
		<g:north size="3.5">
			<g:HTML wordWrap="true">
				welcome
			</g:HTML>
		</g:north>
		<g:center>
			<g:HTML styleName="{style.pabelleft}">
				a pretty picture
			</g:HTML>
		</g:center>
		<g:east size="24.0">
			<g:HTMLPanel>
				<div class="{style.panelright}">
					<div>
						<g:Label text="user" />
						<g:TextBox ui:field="usr" width="14em" />
					</div>
					<div>
						<g:Label text="password" />
						<g:PasswordTextBox ui:field="pwd" width="14em" />
					</div>
					<div>
						<g:Button text="login" ui:field="button" />
					</div>
				</div>
			</g:HTMLPanel>
		</g:east>
	</g:DockLayoutPanel>
</ui:UiBinder> 