<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="pcol.client.CourseGroupWidget.MyStyle">
		.coursegroup { /*width:25em;*/
			
		}
		
		.selected {
			background-color: #B0F070;
			border-style: solid;
			border-color: green;
			border-width: 1px;
		}
		
		.deselected {
			border-style: solid;
			border-color: #DDDDFF; 
			border-width: 1px;
		}
		
		.row:hover {
	     	background-color: #E0E0E0;
		}
			
		.row.selected:hover{
			background-color: #40E040;
		}	
		
		.col1 { /*width:50%;*/
			
		}
		
		.col2 {
			width: 4em;
		}
		
		.col3 {
			width: 2em;
		}
		
		.caption {
			padding:0em;
			border:none;
		}
		.caption legend{
			font-size: 1.1em;
			background-color: #DDDDFF;	
		}
	</ui:style>
	<g:CaptionPanel ui:field="caption" styleName="{style.caption}" >
		<g:FlexTable ui:field="tbl" styleName="{style.deselected}"
			width="100%" height="100%" cellPadding="5" cellSpacing="0" />

	</g:CaptionPanel>
</ui:UiBinder> 