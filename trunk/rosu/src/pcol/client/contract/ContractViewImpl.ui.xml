<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.credittotal {
			font-size: 2em;
		}
		
		.rightpanel {
			padding: 1em;
			margin-left: 0.5em;
			background-color: white;
		}
		
		.dock {
			
		}
	</ui:style>

	<g:DockLayoutPanel unit='EM' styleName="{style.dock}">
		<g:center>
			<g:TabLayoutPanel barHeight="3" barUnit="EM" width="100%"
				height="100%" ui:field="tabpanel" styleName="tabpanelnav">
			</g:TabLayoutPanel>
		</g:center>
		<g:east size="12">
			<g:HTMLPanel styleName="{style.rightpanel}">
				<p>
					Mai sunt
					<g:InlineLabel text="30" ui:field="nrzile" />
					zile in care se poate modifica contractul.
				</p>

				<p>
					Total credite:
					<g:Label text="0" ui:field="total" styleName="{style.credittotal}" />
				</p>
				<p>
					Suma de plata
					<g:Label text="0" ui:field="plata" styleName="{style.credittotal}" />
				</p>
				<g:Button ui:field="button" text="pastreaza modificarile" />
			</g:HTMLPanel>
		</g:east>
	</g:DockLayoutPanel>
</ui:UiBinder>
